# .env.docker (ROOT - Docker environment variables)
# ============================================================
# EVENT MANAGEMENT - DOCKER ENVIRONMENT
# ============================================================
# Copy this file to .env for Docker Compose
# ============================================================

# Node Environment (development/production)
NODE_ENV=development

# Server Ports
BACKEND_PORT=4000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=event_management
DB_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_ACCESS_SECRET=docker-jwt-access-secret-change-in-production
JWT_REFRESH_SECRET=docker-jwt-refresh-secret-change-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Feature Flags
FEATURE_PAYMENT_ENABLED=false
FEATURE_EMAIL_ENABLED=false

# Stripe (Optional - leave empty for mock payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SMTP (Optional - leave empty to disable emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=eventeer-dev@outlook.com

# OAuth (Optional - leave empty to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/oauth/google/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:4000/auth/oauth/github/callback

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_REDIRECT_URI=http://localhost:4000/auth/oauth/facebook/callback

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# URLs
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:4000
REACT_APP_WS_URL=http://localhost:4000
REACT_APP_STRIPE_PUBLISHABLE_KEY=